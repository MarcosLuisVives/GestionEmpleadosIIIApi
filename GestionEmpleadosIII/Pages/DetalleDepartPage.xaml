<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionEmpleadosIII.Pages.DetalleDepartPage"
             Title="GestiÃ³n de Departamento">

    <ScrollView>
        <VerticalStackLayout Padding="30" 
                             Spacing="20" 
                             MaximumWidthRequest="600" 
                             HorizontalOptions="Center">

            <Label Text="Detalles del Departamento" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   Margin="0,0,0,10" />

            <Grid RowDefinitions="Auto, Auto" 
                  ColumnDefinitions="*, *" 
                  ColumnSpacing="15" 
                  RowSpacing="15">

                <VerticalStackLayout Grid.Row="0" Grid.ColumnSpan="2" Spacing="5">
                    <Label Text="Nombre" FontAttributes="Bold" />
                    <Entry Text="{Binding DepartamentoDetalle.Nombre}" 
                           Placeholder="Ej: Contabilidad" />
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="5">
                    <Label Text="Ganancias" FontAttributes="Bold" />
                    <Entry Text="{Binding DepartamentoDetalle.Ganancias}" 
                           Keyboard="Numeric" />
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1" Grid.Column="1" Spacing="5">
                    <Label Text="Sede" FontAttributes="Bold" />
                    <Entry Text="{Binding DepartamentoDetalle.SedeId}" 
                           
                           Opacity="0.7" />
                </VerticalStackLayout>
            </Grid>

            <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                <Button Text="Guardar" 
                        Command="{Binding GuardarCommand}" 
                        WidthRequest="150" />

                <Button Text="Eliminar" 
                        Command="{Binding EliminarCommand}" 
                        IsVisible="{Binding EsEdicion}"
                        WidthRequest="150" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>