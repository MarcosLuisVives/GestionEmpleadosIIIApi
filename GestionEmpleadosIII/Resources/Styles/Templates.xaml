<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="GestionEmpleadosIII.Resources.Styles.Templates">
    <DataTemplate x:Key="CardEmple">
        <Border Stroke="#DDD" 
            StrokeThickness="1" 
            Margin="10" 
            WidthRequest="260" 
            HeightRequest="90">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8" />
            </Border.StrokeShape>

            <Grid ColumnDefinitions="90, *">
                <Border Grid.Column="0" StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8,0,0,8" />
                    </Border.StrokeShape>
                    <Image Source= "{Binding ImageUri}"
                       Aspect="AspectFill" />
                </Border>

                <VerticalStackLayout Grid.Column="1" 
                                 Margin="12,0" 
                                 VerticalOptions="Center">

                    <Label FontSize="15" FontAttributes="Bold">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding Nombre}" />
                                <Span Text=" " />
                                <Span Text="{Binding Apellido}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label Text="{Binding Edad}" 
                       FontSize="13"/>

                    <Label Text="{Binding Genero}" 
                       FontSize="13"/>

                    <Label Text="{Binding Departamento.Nombre}" 
                       FontSize="11" 
                       Margin="0,4,0,0" 
                       FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Grid>
        </Border>
    </DataTemplate>
    <DataTemplate x:Key="CardDepart">
        <Border Stroke="{AppThemeBinding Light=#B0B0B0, Dark=#444}" 
            StrokeThickness="1" 
            Margin="10"
            BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1C1C1C}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8" />
            </Border.StrokeShape>

            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,2" Radius="5" Opacity="{AppThemeBinding Light=0.1, Dark=0}" />
            </Border.Shadow>

            <VerticalStackLayout>
                <Grid ColumnDefinitions="*, Auto" Padding="15">
                    <VerticalStackLayout>
                        <Label Text="{Binding Nombre}" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#222, Dark=White}" />
                        <Label Text="{Binding Sede.Nombre}" 
                           FontSize="11" 
                           TextColor="{AppThemeBinding Light=#555, Dark=#BBB}"
                           Opacity="0.8" />
                    </VerticalStackLayout>

                    <Border Grid.Column="1" 
                        Padding="12,5" 
                        BackgroundColor="{AppThemeBinding Light=#E8F5E9, Dark=#1B301E}"
                        StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="5" />
                        </Border.StrokeShape>

                        <HorizontalStackLayout VerticalOptions="Center">
                            <Label Text="Ganancias" 
                               Margin="0,0,4,0" 
                               FontSize="12"
                               TextColor="{AppThemeBinding Light=#2E7D32, Dark=#81C784}"/>
                            <Label Text="{Binding Ganancias}" 
                               FontAttributes="Bold" 
                               TextColor="{AppThemeBinding Light=#1B5E20, Dark=#A5D6A7}"
                               FontSize="16"/>
                        </HorizontalStackLayout>
                    </Border>
                </Grid>

                <BoxView HeightRequest="1" 
                     BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#333}" 
                     HorizontalOptions="Fill" 
                     Margin="10,0"/>

                <VerticalStackLayout Padding="15,10">
                    <Label Text="Equipo" 
                       FontSize="12" 
                       FontAttributes="Bold" 
                       Margin="0,0,0,8" 
                       TextColor="{AppThemeBinding Light=#444, Dark=#CCC}"/>

                    <VerticalStackLayout BindableLayout.ItemsSource="{Binding Empleados}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="Auto, *" Padding="8" Margin="0,2">
                                    <Ellipse WidthRequest="6" 
                                         HeightRequest="6" 
                                         Fill="{StaticResource Primary}" 
                                         VerticalOptions="Center"
                                         Margin="5,0,10,0"/>

                                    <Label Grid.Column="1" 
                                       Text="{Binding Nombre}" 
                                       FontSize="13" 
                                       TextColor="{AppThemeBinding Light=#333, Dark=#EEE}"/>
                                </Grid>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </Border>
    </DataTemplate>
</ResourceDictionary>